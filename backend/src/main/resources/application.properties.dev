spring-boot-properties

# MySQL datasource (for MySQL / MySQL Workbench)
# Update the values below to match your local MySQL server / Workbench setup.
# Example URL: jdbc:mysql://localhost:3306/logistics_db?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
spring.datasource.url=jdbc:mysql://localhost:3306/logistics_db?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
spring.datasource.username=root
spring.datasource.password=akolangnakakaalam
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# JPA / Hibernate
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=false
spring.application.name=URBANSYNC

# JWT Properties
# Replace with a long, random, and secret string. You can generate one online.
urbansync.app.jwtSecret=c2VjcmV0S2V5Rm9yTG9naXN0aWNzU3lzdGVtSnNvbldlYlRva2VuQXV0aGVudGljYXRpb24=
urbansync.app.jwtExpirationMs=86400000

# Optional: server port override (uncomment to change)
#server.port=8081

# Enable colored output in the console
spring.output.ansi.enabled=always

# Logging pattern to include relative time since application start
logging.pattern.console=%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5p] [%t] [%c] - %m%n
# Set the root logging level to WARN to reduce log verbosity
logging.level.root=WARN
# Allow INFO level for our custom startup message
logging.level.com.Logistics.LogisticsBackend.config.ApplicationStartupRunner=INFO
# Suppress the intentional UserDetailsService override warning
logging.level.org.springframework.security.config.annotation.authentication.configuration.InitializeUserDetailsBeanManagerConfigurer=ERROR

server.forward-headers-strategy=framework

